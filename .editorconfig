root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
tab_width = 4
trim_trailing_whitespace = true

[*.bat]
charset = latin1
end_of_line = crlf

[*.cs]
indent_size = 4

[*.{py,pyi}]
indent_size = 4

[*.txt]
indent_size = unset

[*.md]
indent_size = unset

[/.gitmodules]
indent_style = tab

[/LICENSE_*.txt]
indent_size = unset

[/docs/public/CNAME]
insert_final_newline = false

[/tests/resources/unity/**/Directory.Build.props]
end_of_line = crlf

[/tests/resources/unity/**.asmdef]
insert_final_newline = unset

[/tests/resources/unity/**.{asset,meta,unity}]
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = unset

[/tests/resources/unity/*/*.sln]
indent_style = tab
end_of_line = crlf

[/tests/resources/unity/*/*.csproj]
end_of_line = crlf

[/tests/resources/unity/*/ProjectSettings/**/*.json]
indent_size = 4
insert_final_newline = unset

[/tests/resources/unity/*/{Library,Logs,Temp,UserSettings,obj,.idea,.vscode,.vs}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset
generated_code = true

[*.{blend,gif,glb,ico,jpg,png,pptx,pyc,tga,vrm}]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset

[{.git,.venv,node_modules}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset

[**/{.ruff_cache,.mypy_cache}/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
indent_size = unset
indent_style = unset
tab_width = unset
trim_trailing_whitespace = unset
